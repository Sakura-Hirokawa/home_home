<div class = "container">
  <div class = "row">
    <div class = "col-sm-8 mx-auto my-5">
      <h1 class = "mb-5">スケジュール編集</h1>
      <table class = "table table-striped">
        <tbody>
          <%= form_with model: @event, url: event_path(@event), local:true do |f| %>
          <tr>
            <th><%= f.label :スケジュール名 %></th>
            <td><%= f.text_field :title, placeholder: "スケジュール名", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :スケジュール内容 %></th>
            <td><%= f.text_area :description, placeholder: "スケジュール内容", class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :開始日時 %></th>
            <td><%= f.datetime_select :start_at, {}, class: "form-control datetime-form" %></td>
          </tr>
          <tr>
            <th><%= f.label :終了日時 %></th>
            <td><%= f.datetime_select :end_at, {}, class: "form-control datetime-form" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "変更内容を保存", class: "btn btn-primary btn-block" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>