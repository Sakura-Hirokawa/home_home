<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-warning btn-lg" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn btn-outline-warning btn-lg" %>
  <% end %>
<% end %>