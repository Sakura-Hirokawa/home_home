<table class = "table table-hover text-center">
  <thead>
    <tr>
      <th>User</th>
      <th class = "text-left", style = "width: 50%">List</th>
      <th style = "width: 10%">Status</th>
      <th style = "width: 20%">Comment/ほめホメ</th>
    </tr>
  </thead>
  <tbody>
    <% lists.each do |list| %>
    <tr>
      <td class = "align-middle">
        <%= link_to mypage_path(list.user) do %>
          <%= attachment_image_tag list.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class: "mb-2" %><br />
          <%= list.user.name %>
        <% end %>
      </td>
      <td class = "text-left">
        <%= link_to list.date.strftime('%Y/%m/%d'), list_path(list) %><br />
        ・<%= list.first_item %><br />
        ・<%= list.second_item %><br />
        ・<%= list.third_item %>
      </td>
      <td class = "align-middle pt-4">
        <% if list.done %>
          <p class = "btn btn-warning">達成</p>
        <% else %>
          <p class = "btn btn-outline-success">実行中</p>
        <% end %>
      </td>
      <td class = "align-middle">
        <i class = "far fa-comment"><%= list.list_comments.count %></i>
        <i class = "fas fa-star favorite"></i><%= list.favorites.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>