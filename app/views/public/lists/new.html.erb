<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 my-5">
      <h1 class = "mb-5">今日の目標を記録しましょう<i class="fas fa-music"></i></h1>
      <%= render 'layouts/errors', obj: @list %>
      <%= form_with model: @list, local: true do |f| %>
        <table class = "table table-striped">
          <tbody>
            <tr>
              <th><%= f.label :日付選択 %></th>
              <td><%= f.date_field :date %></td>
            </tr>
            <tr>
              <th><%= f.label :ひとつめ %></th>
              <td><%= f.text_area :first_item, placeholder: "頑張りたいことや達成したいこと", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :ふたつめ %></th>
              <td><%= f.text_area :second_item, placeholder: "頑張りたいことや達成したいこと", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :みっつめ %></th>
              <td><%= f.text_area :third_item, placeholder: "頑張りたいことや達成したいこと", class: "form-control" %></td>
            </tr>
            <tr>
              <th>Status</th>
              <td>
                <%= f.radio_button :done, :false %>実行中
                <%= f.radio_button :done, :true %>達成
              </td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit "投稿", class: "btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>