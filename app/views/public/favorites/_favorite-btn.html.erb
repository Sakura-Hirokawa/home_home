<div class = "text-center pb-5">
  <% if list.favorited_by?(current_user) %>
    <h3><%= link_to "おつかれさまです！えらい！", list_favorites_path(list), method: :delete, remote: true, class: "far fa-laugh-squint" %></h3>
  <% else %>
    <%= link_to "ほめホメボタン", list_favorites_path(list), method: :post, remote: true, class: "fas fa-star btn btn-outline-warning btn-lg" %>
  <% end %>
</div>