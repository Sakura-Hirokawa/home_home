<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 my-5">
      <h1 class = "mb-5">ユーザ情報編集</h1>
      <%= render 'layouts/errors', obj: @user %>
        <table class = "table table-striped">
          <tbody>
            <%= form_with model: @user, local:true do |f| %>
            <tr>
              <th><%= f.label :プロフィール画像 %></th>
              <td><%= f.attachment_field :profile_image %></td>
            </tr>
            <tr>
              <th><%= f.label :名前 %></th>
              <td><%= f.text_field :name, placeholder: "名前", class: "form-control" %></td>
            </tr>
            <tr>
              <th><%= f.label :自己紹介 %></th>
              <td><%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control" %></td>
            </tr>
            <tr>
              <th></th>
              <td>
                <%= f.submit "変更内容を保存", class: "btn btn-primary mr-3" %>
                <%= link_to "キャンセル", mypage_path(@user), class: "btn btn-outline-info col-2" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class = "mt-5">
          <% if user_signed_in? && @user.id == current_user.id %>
            ※退会する方は<%= link_to "こちら", unsubscribe_path(@user) %>からお願いします。
          <% end %>
        </div>
    </div>
  </div>
</div>