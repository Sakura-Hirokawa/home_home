<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>ユーザID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td>
        <%= user.id %>
      </td>
      <td>
        <%= link_to admin_user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <% if user.is_deleted == true %>
          <p class= "text-secondary">退会</p>
        <% else %>
          <p class = "text-success">有効</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>