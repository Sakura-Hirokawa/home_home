<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 my-5">
      <h1 class = "mb-5"><%= @user.name %>さんの投稿一覧</h1>
      <p class = "text-danger"><%= flash[:danger] %></p>
      <h3>投稿数：<%= @user.lists.count %></h3>
      <table class = "table table-striped text-center">
        <thead>
          <tr>
            <th>投稿No</th>
            <th class = "text-left", style = "width: 50%">投稿内容</th>
            <th style = "width: 10%">ステータス</th>
            <th style = "width: 20%">コメント/ほめホメ</th>
          </tr>
        </thead>
        <tbody>
          <% @user.lists.each do |list| %>
          <tr>
            <td>
              <%= link_to list.id, edit_admin_list_path(list) %></td>
            <td class = "text-left">
              <%= list.date.strftime('%Y/%m/%d') %><br />
              ・<%= list.first_item %><br />
              ・<%= list.second_item %><br />
              ・<%= list.third_item %>
            </td>
            <td class = "align-middle pt-4">
              <% if list.done %>
                <p class = "btn btn-warning">達成</p>
              <% else %>
                <p class = "btn btn-outline-success">実行中</p>
              <% end %>
            </td>
            <td class = "align-middle">
              <i class="far fa-comment"><%= list.list_comments.count %></i>
              <i class="fas fa-star favorite"><%= list.favorites.count %></i>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>