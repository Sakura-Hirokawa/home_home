<% if users.exists? %>
  <table class = "table table-hover text-center">
    <thead>
      <tr>
        <th>ユーザ</th>
        <th>自己紹介</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50", class: "mr-3" %>
            <%= user.name %>
          <% end %>
        </td>
        <td class = "text-left", style = "width: 65%">
          <%= user.introduction %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザはいません</p>
<% end %>